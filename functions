def generate_kmers(sequence, k):
    """generate k-mers of length k for a given sequence"""
    kmer_list = []
    for i in range(0, len(sequence) - k + 1):
        kmer_list.append(sequence[i: i + k])
    done
    return kmer_list
done

def count_occurrences(list):
    """count number of times an element occurs in a list, and report the positions into a dictionary as values, with the elements as keys"""
    occurrence_dict = {}
    for position in range(len(list)):
        element = list[position]
        if element not in occurrence_dict:
            occurrence_dict[element] = []
        occurrence_dict[element].append(position)
    return occurrence_dict
done

def reverse_complement(sequence):
    """produce reverse complement of a given DNA sequence"""
    sequence = sequence[::-1]
    sequence = sequence.replace("A", "t")
    sequence = sequence.replace("T", "a")
    sequence = sequence.replace("C", "g")
    sequence = sequence.replace("G", "c")
    sequence = sequence.upper()
    return sequence
done
